<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFEEE"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/casio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASIO"
        android:textSize="34sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp" />


    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/casio"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:background="#EEEEEE"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:hint="0"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:layout_below="@id/display"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:layout_toEndOf="@id/btn1"
        android:layout_alignTop="@id/btn1"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:layout_toEndOf="@id/btn2"
        android:layout_alignTop="@id/btn2"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:layout_toEndOf="@id/btn3"
        android:layout_alignTop="@id/btn3"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:layout_below="@id/btn1"
        android:layout_alignStart="@id/btn1"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:layout_below="@id/btn2"
        android:layout_alignStart="@id/btn2"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:layout_below="@id/btn3"
        android:layout_alignStart="@id/btn3"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:layout_below="@id/btnPlus"
        android:layout_alignStart="@id/btnPlus"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Moved btnDiv before btnMul -->
    <Button
        android:id="@+id/btnDiv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:layout_below="@id/btnMinus"
        android:layout_alignStart="@id/btnMinus"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        android:layout_below="@id/btnDiv"
        android:layout_alignStart="@id/btnDiv"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:layout_below="@id/btn4"
        android:layout_alignStart="@id/btn4"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:layout_below="@id/btn5"
        android:layout_alignStart="@id/btn5"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:layout_below="@id/btn6"
        android:layout_alignStart="@id/btn6"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:layout_below="@id/btn7"
        android:layout_alignStart="@id/btn7"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:layout_below="@id/btn8"
        android:layout_alignStart="@id/btn8"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        android:layout_below="@id/btn9"
        android:layout_alignStart="@id/btn9"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="="
        android:textSize="24sp"
        android:layout_below="@id/btn0"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF" />

</RelativeLayout>
